import os

import nvidia.dali as dali
dali_lib_dir = os.path.dirname(os.path.abspath(dali.__file__))
os.environ['LD_LIBRARY_PATH'] += os.pathsep + dali_lib_dir

path = os.path.join(os.path.dirname(os.path.abspath(__file__)), 'libdali_video.so')
try:
    dali.plugin_manager.load_library(path)
except:
    print(f"Failed to load {path}")

